{
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python",
      "config": { "pythonVersion": "3.11" }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "env": {
          "VITE_SUPABASE_URL": "@vite_supabase_url",
          "VITE_SUPABASE_ANON_KEY": "@vite_supabase_anon_key"
        }
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
